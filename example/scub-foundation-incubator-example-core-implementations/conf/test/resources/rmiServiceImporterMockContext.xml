	<tx:advice id="serviceTestTxAdvice" transaction-manager="transactionManager">
		<tx:attributes>
			<tx:method name="*" propagation="REQUIRED"/>
		</tx:attributes>
	</tx:advice>

	<aop:config>
		<aop:pointcut id="serviceTestTxPointcut" expression="execution(* scub_foundation_incubator.scub_foundation_incubator_example_core_implementations.*.dao.interfaces..*.*(..))"/>
		<aop:advisor advice-ref="serviceTestTxAdvice" pointcut-ref="serviceTestTxPointcut"/>
